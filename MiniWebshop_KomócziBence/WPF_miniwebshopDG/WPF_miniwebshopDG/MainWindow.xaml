<Window x:Class="WPF_miniwebshopDG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_miniwebshopDG"
        mc:Ignorable="d"
        Title="MiniWebshop" Height="600" Width="1050">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="2"
                Background="#ffebebeb"
                HorizontalAlignment="Left"
                Margin="10,10,0,10"
               BorderBrush="Transparent"
                BorderThickness="0" Width="1030">
            <WrapPanel HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                <Label Content="Kategória:" FontSize="16"/>
                <!--<ListBox Name="listbox1" Height="40" Width="150"/>-->
                <ComboBox Name="combobox1" Width="200"
                          Height="40" />



                <CheckBox Name="csakRaktaron"
                          FontSize="16"
                          Content="Csak raktáron"
                          BorderBrush="LightGray"
                          Margin="10" 
                          IsChecked="False" Checked="csakRaktaron_Checked"/>
                <Button Content="Frissítés"
                        FontSize="16"
                        Margin="10"
                        Width="100"
                        Height="30"
                        Name="btn_refresh"
                        Click="btn_refresh_Click"/>
                <Button Content="Szűrés alkalmazása"
                        FontSize="16"
                        Margin="10"
                        Width="200"
                        Height="30"
                        Name="btn_search"
                        Click="btn_search_Click"/>
            </WrapPanel>




        </Border>
        
            <Border 
                CornerRadius="13"
                Grid.Row="1"
                Grid.Column="0"
                Margin="15"
                BorderBrush="Black"
                BorderThickness="0.5"
                >
                <StackPanel>
                    <Label Content="Termékek"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="5"/>
                    <DataGrid x:Name="ProductsGrid"
                          Margin="10"
                              SelectionChanged="ProductsGrid_SelectionChanged"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding id}" Width="60"/>
                            <DataGridTextColumn Header="Név" Binding="{Binding name}" Width="*"/>
                            <DataGridTextColumn Header="Ár" Binding="{Binding price}" Width="120"/>
                            <DataGridTextColumn Header="Kategória" Binding="{Binding category}" Width="140"/>
                            <DataGridCheckBoxColumn Header="Raktáron" Binding="{Binding inStock}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

            </Border>
       
        
            <Border 
                Grid.Column="1"
                Grid.Row="1"
                Margin="15"
                BorderThickness="0.5"
                BorderBrush="Black"
                CornerRadius="13"
                >
            <StackPanel VerticalAlignment="Top"
                        >
                <Label Content="Szerkesztő"
                       FontWeight="Bold"
                       FontSize="18"/>
                <Label Content="Név:" FontSize="16"/>
                <TextBox Margin="5" Height="30"
                         Name="tbx_nev"/>
                <Label Content="Ár:" FontSize="16"/>
                <TextBox Margin="5" Height="30"
                         Name="tbx_ar"/>
                <Label Content="Kategória:" FontSize="16"/>
                <ComboBox Margin="5" Name="combobox2"/>
                <CheckBox Name="raktaron"
                          FontSize="16"
                          Content="Raktáron"
                          BorderBrush="LightGray"
                          Margin="10" FontFamily="14"
                          IsChecked="False" Checked="raktaron_Checked"/>
                <Button Name="btn_newAdd" Content="Új hozzáadása"
                        Height="30" FontSize="16" Margin="5 10 5 0" 
                        Click="btn_newAdd_Click"/>
                <Button Name="btn_modifySave" Content="Módosítás mentése"
                        Height="30" FontSize="14" Margin="5 10 5 0"
                        Click="btn_modifySave_Click"/>
                <Button Name="btn_delete" Content="Törlés"
                        Height="30" FontSize="14" Margin="5 10 5 0"
                        Click="btn_delete_Click"/>
                
            </StackPanel>

                
                

            </Border>
        
        
    </Grid>
</Window>
